<%- include('../../layouts/main', { 
  title: 'My Comments',
  body: `
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-comments me-2"></i>My Comments</h1>
</div>

<% if (comments.length === 0) { %>
<div class="alert alert-info">No comments yet. <a href="/">Start reviewing perfumes!</a></div>
<% } else { %>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Perfume</th>
                <th>Brand</th>
                <th>Rating</th>
                <th>Comment</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            <% comments.forEach(comment => { %>
            <tr>
                <td><a href="/perfumes/<%= comment.perfumeName._id %>"><%= comment.perfumeName %></a></td>
                <td><%= comment.brand %></td>
                <td>
                    <% for(let i=1; i<=5; i++) { %>
                        <i class="fas fa-star <%= i <= comment.rating ? '' : 'far' %> text-warning"></i>
                    <% } %>
                </td>
                <td><%= comment.content %></td>
                <td><%= new Date(comment.createdAt).toLocaleDateString() %></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<% } %>
  `
}) %>