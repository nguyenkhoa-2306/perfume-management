<%- include('../../layouts/main', { 
  title: 'Profile',
  body: `
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3><i class="fas fa-user-edit me-2"></i>Edit Profile</h3>
            </div>
            <form method="POST" action="/profile">
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" value="<%= member.email %>" disabled>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input type="text" name="name" class="form-control" value="<%= member.name %>" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Year of Birth</label>
                        <input type="number" name="YOB" class="form-control" value="<%= member.YOB %>" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Gender</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="gender" value="true" id="male" <%= member.gender ? 'checked' : '' %> required>
                            <label class="form-check-label" for="male">Male</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="gender" value="false" id="female" <%= !member.gender ? 'checked' : '' %>>
                            <label class="form-check-label" for="female">Female</label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Update Profile</button>
                </div>
            </form>
        </div>
    </div>
</div>
  `
}) %>