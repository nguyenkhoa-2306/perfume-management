<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PerfumeHub - Home</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body class="bg-light">
    <%- include('../partials/nav', { user }) -%>

    <main class="container py-4">
      <% if (typeof messages !== 'undefined' && messages.length > 0) { %> <%
      messages.forEach(msg => { %>
      <div class="alert alert-<%= msg.type %> alert-dismissible fade show">
        <%= msg.message %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
        ></button>
      </div>
      <% }) %> <% } %>

      <div class="row mb-4">
        <div class="col-md-6">
          <h1>
            <i class="fas fa-spray-can me-2 text-warning"></i>Perfume Collection
          </h1>
        </div>
        <div class="col-md-6">
          <form action="/search" method="GET" class="d-flex">
            <input
              type="text"
              name="q"
              class="form-control me-2"
              placeholder="Search perfumes..."
            />
            <button type="submit" class="btn btn-warning">
              <i class="fas fa-search"></i>
            </button>
          </form>
        </div>
      </div>

      <div class="row mb-4">
        <div class="col-md-4">
          <select
            class="form-select"
            onchange="if(this.value) window.location.href='/filter?brand='+this.value"
          >
            <option value="">All Brands</option>
            <% if (brands && brands.length > 0) { %> <% brands.forEach(brand =>
            { %>
            <option value="<%= brand.brandName %>">
              <%= brand.brandName %>
            </option>
            <% }) %> <% } %>
          </select>
        </div>
      </div>

      <div class="row">
        <% if (!perfumes || perfumes.length === 0) { %>
        <div class="col-12">
          <div class="alert alert-info text-center">
            <i class="fas fa-spray-can fa-3x mb-3 text-muted"></i>
            <h4>No perfumes found</h4>
            <p class="lead">Start by adding some perfumes (Admin only)</p>
            <% if (user && user.isAdmin) { %>
            <a href="/admin/perfumes" class="btn btn-primary">Add Perfume</a>
            <% } %>
          </div>
        </div>
        <% } else { %> <% perfumes.forEach(perfume => { %>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card perfume-card h-100 shadow-sm">
            <img
              src="<%= perfume.uri || 'https://via.placeholder.com/300x250?text=No+Image' %>"
              class="card-img-top"
              alt="<%= perfume.perfumeName %>"
              style="height: 250px; object-fit: cover"
            />
            <% if (perfume.concentration === 'Extrait') { %>
            <span
              class="position-absolute top-0 start-0 badge extrait-badge m-2 fs-6"
              >PREMIUM EXTRAT</span
            >
            <% } %>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= perfume.perfumeName %></h5>
              <p class="card-text">
                <strong><%= perfume.brand?.brandName || 'Unknown' %></strong>
              </p>
              <p class="card-text small">
                <i
                  class="fas fa-<%= perfume.targetAudience === 'male' ? 'mars' : perfume.targetAudience === 'female' ? 'venus' : 'mercury' %> text-primary me-1"
                ></i>
                <%= perfume.targetAudience %>
              </p>
              <p class="card-text text-success fw-bold fs-5">
                $<%= perfume.price %>
              </p>
              <a
                href="/perfumes/<%= perfume._id %>"
                class="btn btn-outline-primary mt-auto"
                >View Details</a
              >
            </div>
          </div>
        </div>
        <% }) %> <% } %>
      </div>
    </main>

    <footer class="bg-dark text-white text-center py-3 mt-5">
      <p class="mb-0">&copy; 2025 PerfumeHub - FPT Assignment</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
