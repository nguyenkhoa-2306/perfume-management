<%- include('../../layouts/main', { 
  title: 'Manage Perfumes',
  body: `
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-spray-can me-2"></i>Perfumes</h1>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#perfumeModal">
        <i class="fas fa-plus me-2"></i>Add Perfume
    </button>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Brand</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% perfumes.forEach(perfume => { %>
            <tr>
                <td><%= perfume.perfumeName %></td>
                <td><%= perfume.brand.brandName %></td>
                <td>$<%= perfume.price %></td>
                <td>
                    <button class="btn btn-sm btn-outline-primary edit-perfume" data-id="<%= perfume._id %>">
                        <i class="fas fa-edit"></i>
                    </button>
                    <button class="btn btn-sm btn-outline-danger delete-perfume" data-id="<%= perfume._id %>">
                        <i class="fas fa-trash"></i>
                    </button>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<!-- PERFUME MODAL (COMPLEX FORM) -->
<div class="modal fade" id="perfumeModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Perfume</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="perfumeForm" method="POST" action="/admin/perfumes">
                <div class="modal-body">
                    <input type="hidden" name="_id" id="perfumeId">
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Perfume Name</label>
                            <input type="text" name="perfumeName" id="perfumeName" class="form-control" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Brand</label>
                            <select name="brand" class="form-select" required>
                                <% brands.forEach(brand => { %>
                                    <option value="<%= brand._id %>"><%= brand.brandName %></option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Price ($)</label>
                            <input type="number" name="price" id="perfumePrice" class="form-control" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Volume (ml)</label>
                            <input type="number" name="volume" id="perfumeVolume" class="form-control" required>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Concentration</label>
                            <select name="concentration" class="form-select" required>
                                <option value="Extrait">Extrait</option>
                                <option value="EDP">EDP</option>
                                <option value="EDT">EDT</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Target Audience</label>
                            <select name="targetAudience" class="form-select" required>
                                <option value="male">Male</option>
                                <option value="female">Female</option>
                                <option value="unisex">Unisex</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Image URI</label>
                        <input type="url" name="uri" id="perfumeUri" class="form-control" placeholder="https://example.com/image.jpg" required>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea name="description" id="perfumeDescription" class="form-control" rows="3" required></textarea>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Ingredients</label>
                        <textarea name="ingredients" id="perfumeIngredients" class="form-control" rows="2" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save Perfume</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
// EDIT PERFUME - POPULATE FORM (COMPLEX)
$('.edit-perfume').click(function() {
    const perfume = JSON.parse('<%- JSON.stringify(perfumes) %>').find(p => p._id === $(this).data('id'));
    $('#perfumeId').val(perfume._id);
    $('#perfumeName').val(perfume.perfumeName);
    $('#perfumePrice').val(perfume.price);
    $('#perfumeVolume').val(perfume.volume);
    $('select[name="brand"]').val(perfume.brand._id);
    $('select[name="concentration"]').val(perfume.concentration);
    $('select[name="targetAudience"]').val(perfume.targetAudience);
    $('#perfumeUri').val(perfume.uri);
    $('#perfumeDescription').val(perfume.description);
    $('#perfumeIngredients').val(perfume.ingredients);
    
    $('#perfumeModal .modal-title').text('Edit Perfume');
    $('#perfumeForm').attr('method', 'PUT').attr('action', `/admin/perfumes/${perfume._id}`);
});

// DELETE
$('.delete-perfume').click(async function() {
    if (confirm('Delete this perfume?')) {
        const id = $(this).data('id');
        const res = await fetch(`/admin/perfumes/${id}`, { method: 'DELETE' });
        if (res.ok) location.reload();
    }
});
</script>
  `
}) %>