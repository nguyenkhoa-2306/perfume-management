<%- include('../../layouts/main', { 
  title: 'Collectors',
  body: `
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-users me-2"></i>Collectors</h1>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Email</th>
                <th>Name</th>
                <th>YOB</th>
                <th>Gender</th>
                <th>Role</th>
                <th>Joined</th>
            </tr>
        </thead>
        <tbody>
            <% members.forEach(member => { %>
            <tr>
                <td><%= member.email %></td>
                <td><%= member.name %></td>
                <td><%= member.YOB %></td>
                <td>
                    <i class="fas fa-<%= member.gender ? 'mars' : 'venus' %> me-1"></i>
                    <%= member.gender ? 'Male' : 'Female' %>
                </td>
                <td>
                    <span class="badge <%= member.isAdmin ? 'bg-danger' : 'bg-secondary' %>">
                        <%= member.isAdmin ? 'Admin' : 'Member' %>
                    </span>
                </td>
                <td><%= new Date(member.createdAt).toLocaleDateString() %></td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>
  `
}) %>