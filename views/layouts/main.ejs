<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %> - PerfumeHub</title>
    <!-- BOOTSTRAP 5 -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- FONT AWESOME -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- CUSTOM CSS -->
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body class="bg-light">
    <!-- NAVBAR -->
    <%- include('../partials/nav', { user, path }) %>

    <!-- FLASH MESSAGES -->
    <main class="container-fluid py-4">
      <% if (typeof messages !== 'undefined' && messages.length > 0) { %> <%
      messages.forEach(msg => { %>
      <div
        class="alert alert-<%= msg.type %> alert-dismissible fade show"
        role="alert"
      >
        <i
          class="fas <%= msg.type === 'success' ? 'fa-check-circle' : 'fa-exclamation-triangle' %> me-2"
        ></i>
        <%= msg.message %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
        ></button>
      </div>
      <% }) %> <% } %>

      <!-- PAGE CONTENT -->
      <%- body %>
    </main>

    <!-- FOOTER -->
    <footer class="bg-dark text-white text-center py-3 mt-5">
      <p class="mb-0">
        &copy; 2025 PerfumeHub. All rights reserved. | FPT Assignment
      </p>
    </footer>

    <!-- SCRIPTS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/js/main.js"></script>
  </body>
</html>
