<div class="col-12 col-sm-6 col-md-4 col-lg-3">
  <div
    class="card shadow-sm h-100 border-0 hover-card cursor-pointer"
    onClick="window.location.href='/perfumes/<%= perfume._id %>'"
  >
    <img
      src="<%= perfume.uri %>"
      alt="<%= perfume.perfumeName %>"
      class="card-img-top"
      style="
        object-fit: cover;
        height: 250px;
        border-top-left-radius: 0.5rem;
        border-top-right-radius: 0.5rem;
      "
    />
    <div class="card-body d-flex flex-column">
      <h5 class="card-title text-truncate mb-2">
        <a
          href="/perfumes/<%= perfume._id %>"
          class="text-decoration-none text-dark"
        >
          <%= perfume.perfumeName %>
        </a>
      </h5>
      <p class="text-muted mb-1">Brand: <%= perfume.brand.brandName %></p>
      <p class="text-muted mb-1">Target: <%= perfume.targetAudience %></p>
      <p class="text-muted mb-3">Concentration: <%= perfume.concentration %></p>
      <a
        href="/perfumes/<%= perfume._id %>"
        class="btn btn-outline-primary mt-auto w-100 fw-semibold"
      >
        View Details
      </a>
    </div>
  </div>
</div>
